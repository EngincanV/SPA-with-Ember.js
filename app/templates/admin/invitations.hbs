<div class="container">
    <h2>Invitations</h2>
    <br>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>E-mail</th>
                <th class="text-center">Operations</th>
            </tr>
        </thead>
        <tbody>
            {{#each model as |invitation|}}
                <tr>
                    <td>{{invitation.id}}</td>
                    <td>{{invitation.email}}</td>
                    <td class="text-center">
                        <button class="btn btn-danger btn-sm" {{action 'deleteInvitations' invitation}}>Delete</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>